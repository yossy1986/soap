<div class="bg2"><h1>Articles</h1></div>
<section class="wrapper">
  <div class="container">
    <div class="flex">
      <% @posts.each do |post| %>
        <section class="lesson">
          <img src="<%= "/post_images/#{post.image_name}" %>">
          <h2><%= post.title %></h2>
          <p><%= simple_format(post.content.truncate(30)) %></p>
          <%= link_to("Read More","/posts/#{post.id}",class: "border") %>
        </section>
      <% end %>
      
      <% if @posts.length > 6 %>
      <%= link_to("次ページへ","/posts/index") %>
      <% end %>
    </div>
    <%= paginate @posts %>
  </div>
</section>