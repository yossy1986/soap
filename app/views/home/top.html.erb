<!--Lessons-->
<section class="top-lessons top">
  <div class="container">
    <h1>Lessons</h1>
    <div class="flex">
    <% if @lessons.present? %>
    <% @lessons[0..1].each do |lesson| %>
      <section class="top-lesson">
        <h2><%= lesson.title %></h2>
        <%= simple_format lesson.subtitle %>
        <%= image_tag lesson.image.url if lesson.image? %>
      </section>
     <% end %>
    </div>
    <div class="flex">
    <% @lessons[2..3].each do |lesson| %>
      <section class="top-lesson">
        <h2><%= lesson.title %></h2>
        <%= simple_format lesson.subtitle %>
        <%= image_tag lesson.image.url if lesson.image? %>
      </section>
     <% end %>
    </div>
    <% end %>
    <div class="flex">
      <section class="top-lesson top">
        <h2>1DAYレッスン</h2>
        <p>当教室で一番人気のレッスン。<br>
        甘い香りで癒され、洗い上がりもしっとり。</p>
        <img src="/images/soap8.jpg" alt="">
      </section>
    </div>
    <h3><%= link_to("講座一覧へ","/lessons",class: "border") %></h3>
  </div>
</section>

